{%- set alt_logo = request.select("Logo der Deutschen Telekom", "Logo of Deutsche Telekom") -%}
{%- set src_logo = request.static_url('oscad:static/img/t-logo-128x60.orig.png')            -%}
{%- set alt_slogan = request.select("ERLEBEN, WAS VERBINDET", "LIFE IS FOR SHARING")        -%}
{%- set src_slogan = request.static_url('oscad:static/img/t-slogan-en-198x60.orig.png')     -%}

{%- macro telekom_logo() -%}
<a href="http://www.telekom.com">
  <img id="logo-telekom" alt="{{alt_logo}}" src="{{src_logo}}" />
</a>
{%- endmacro -%}

{%- macro telekom_motto() -%}
<img id="motto-telekom" alt="{{alt_slogan}}" src="{{src_slogan}}" />
{%- endmacro -%}

<div class="container logobar">
  <div class="row">
    <div class="pull-left">{{telekom_logo()}}</div>
    <div class="pull-right">{{telekom_motto()}}</div>
  </div>  
</div>

